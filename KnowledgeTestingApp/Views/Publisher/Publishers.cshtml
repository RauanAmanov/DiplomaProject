@model List<Publisher>
@{
    ViewData["Title"] = "Издательства";
    int i = 0;
}
<h3>Издательства</h3>
<a href="~/Admin/Index">Назад</a>
<br />
@Html.ActionLink("Добавить", "Publisher")
<table class="table">
    <tr>
        <th>#</th>
        <th>Название</th>
        <th></th>
    </tr>
    @foreach (var m in Model) {
        <tr>
            <td>@(++i)</td>
            <td>@m.Name</td>
            <td>
                @Html.ActionLink("Изменить", "Publisher", new { id = m.Id }) &nbsp;&nbsp;
                @Html.ActionLink("Удалить", "RemovePublisher", new { id = m.Id })
            </td>
        </tr>
    }
</table>
