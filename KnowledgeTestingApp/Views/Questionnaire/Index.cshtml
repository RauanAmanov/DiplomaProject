@model List<Questionnaire>
@{
    ViewData["Title"] = "Тестирование";
    int i = 0;
}
<h3>Тестирование</h3>
<table class="table-sm">
    <tr>
        <th>#</th>
        <th>Название</th>
        <th></th>
    </tr>
    @foreach (var m in Model) {
        <tr>
            <td>@(++i)</td>
            <td>@m.Name</td>
            <td>@(m.QuestionnaireQuestions.Count > 0 ? Html.ActionLink("Начать","QuestionnaireQuestion", "Response", 
                new { id = m.QuestionnaireQuestions.First().Id }) : "")</td>
        </tr>
    }
</table>
