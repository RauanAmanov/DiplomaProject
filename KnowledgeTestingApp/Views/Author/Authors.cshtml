@model List<Author>
@{
    ViewData["Title"] = "Авторы";
    int i = 0;
}
<h3>Авторы</h3>
@Html.ActionLink("Назад", "Index", "Admin")
<br />
@Html.ActionLink("Добавить", "Author")
<table class="table">
    <tr>
        <th>#</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th></th>
    </tr>
    @foreach (var m in Model) {
        <tr>
            <td>@(++i)</td>
            <td>@m.Lastname</td>
            <td>@m.Firstname</td>
            <td>@m.Patronymic</td>
            <td>
                @Html.ActionLink("Изменить", "Author", new { id = m.Id }) &nbsp;&nbsp;
                @Html.ActionLink("Удалить", "RemoveAuthor", new { id = m.Id })
            </td>
        </tr>
    }
</table>